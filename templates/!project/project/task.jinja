{% block breadcrumb %}
{{ super() }}
<li class="divider">/</li>
<li><a href="{{ url_for('project.work.render_task_list', project_id=project.id) }}?state=opened">{{ _('Tasks') }}</a></li>
<li class="divider">/</li>
